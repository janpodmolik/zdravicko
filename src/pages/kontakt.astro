---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import MobileMenu from '../components/common/MobileMenu.astro';
import PageHeader from '../components/common/PageHeader.astro';
import Footer from '../components/common/Footer.astro';
import ContactInfoItem from '../components/cards/ContactInfoItem.astro';
import ContactPhoneItem from '../components/cards/ContactPhoneItem.astro';
import { Icon } from 'astro-icon/components';
import { contactInfo } from '../data/contact';
import { getTodayOpeningHours } from '../utils/openingHours';

const todayInfo = getTodayOpeningHours();

// Google Maps URL pro adresu
const mapsUrl = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(contactInfo.address.full)}`;
---

<Layout
  title="Kontakt - Zdravíčko"
  description="Kontaktujte naší dětskou ordinaci - telefon, email, adresa, mapa a kontaktní formulář"
>
  <Header activePage="kontakt" />
  <MobileMenu activePage="kontakt" />

  <main>
    <PageHeader
      title="Kontakt"
      description="Jsme tu pro vás a vaše děti"
    />

    <!-- Contact Info & Form -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid lg:grid-cols-2 gap-12">
            <!-- Left: Contact Information -->
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-8">Kontaktní údaje</h2>

              <div class="space-y-4">
                <!-- Address - clickable, opens Google Maps -->
                <ContactInfoItem
                  icon="mdi:map-marker"
                  title="Adresa ordinace"
                  href={mapsUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <p class="text-gray-600">{contactInfo.address.street}</p>
                  <p class="text-gray-600">{contactInfo.address.zip} {contactInfo.address.city}</p>
                </ContactInfoItem>

                <!-- Phone - special component with multiple clickable numbers -->
                <ContactPhoneItem
                  icon="mdi:phone"
                  title="Telefon"
                  phones={[contactInfo.phones.doctor, contactInfo.phones.nurse]}
                />

                <!-- Email - clickable -->
                <ContactInfoItem
                  icon="mdi:email"
                  title="Email"
                  href={`mailto:${contactInfo.email}`}
                >
                  <p class="text-blue-600 hover:text-blue-700 font-medium">{contactInfo.email}</p>
                </ContactInfoItem>

                <!-- Opening Hours Summary - clickable, goes to full schedule -->
                <ContactInfoItem
                  icon="mdi:clock-outline"
                  title={todayInfo.title}
                  href="/ordinacni-hodiny"
                >
                  {todayInfo.hours ? (
                    <p class:list={[
                      "font-medium",
                      todayInfo.isModified ? "text-amber-700" : "text-gray-600"
                    ]}>
                      {todayInfo.hours}
                    </p>
                  ) : (
                    <p class="text-red-600 font-medium">Zavřeno</p>
                  )}
                  <p class="text-blue-600 text-sm font-medium inline-flex items-center gap-1 mt-2">
                    Celý rozvrh
                    <Icon name="mdi:arrow-right" class="w-4 h-4" />
                  </p>
                </ContactInfoItem>
              </div>

              <!-- Emergency Notice -->
              <div class="mt-8 p-6 bg-red-50 border-2 border-red-200 rounded-xl">
                <div class="flex gap-3">
                  <Icon name="mdi:alert-circle" class="w-6 h-6 text-red-600 shrink-0" />
                  <div>
                    <h3 class="font-semibold text-red-900 mb-2">Akutní stavy</h3>
                    <p class="text-sm text-red-800 mb-3">
                      V případě akutních stavů vždy volejte předem. Mimo ordinační hodiny kontaktujte záchrannou službu.
                    </p>
                    <a href="tel:155" class="inline-flex items-center gap-2 text-red-600 font-semibold hover:text-red-700">
                      <Icon name="mdi:ambulance" class="w-5 h-5" />
                      155 - Záchranná služba
                    </a>
                  </div>
                </div>
              </div>
            </div>

            <!-- Right: Contact Form -->
            <div>
              <div class="bg-gray-50 rounded-2xl p-8 border-2 border-gray-200">
                <h2 class="text-3xl font-bold text-gray-900 mb-2">Napište nám</h2>
                <p class="text-gray-600 mb-6">Zanechte nám zprávu a my se vám ozveme co nejdříve</p>

                <form class="space-y-5">
                  <div>
                    <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
                      Jméno a příjmení *
                    </label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      required
                      class="w-full px-4 py-3 rounded-lg bg-white border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                      placeholder="Jan Novák"
                    />
                  </div>

                  <div>
                    <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                      Email *
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      class="w-full px-4 py-3 rounded-lg bg-white border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                      placeholder="jan.novak@email.cz"
                    />
                  </div>

                  <div>
                    <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
                      Telefon
                    </label>
                    <input
                      type="tel"
                      id="phone"
                      name="phone"
                      class="w-full px-4 py-3 rounded-lg bg-white border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                      placeholder="+420 123 456 789"
                    />
                  </div>

                  <div>
                    <label for="subject" class="block text-sm font-semibold text-gray-700 mb-2">
                      Předmět
                    </label>
                    <select
                      id="subject"
                      name="subject"
                      class="w-full px-4 py-3 rounded-lg bg-white border-2 border-gray-300 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    >
                      <option value="general">Obecný dotaz</option>
                      <option value="appointment">Objednání na vyšetření</option>
                      <option value="vaccination">Očkování</option>
                      <option value="results">Výsledky vyšetření</option>
                      <option value="other">Jiné</option>
                    </select>
                  </div>

                  <div>
                    <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
                      Zpráva *
                    </label>
                    <textarea
                      id="message"
                      name="message"
                      required
                      rows="5"
                      class="w-full px-4 py-3 rounded-lg bg-white border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                      placeholder="Napište nám vaši zprávu..."
                    ></textarea>
                  </div>

                  <button
                    type="submit"
                    class="w-full bg-blue-600 text-white font-semibold px-8 py-4 rounded-lg hover:bg-blue-700 transition-colors shadow-lg hover:shadow-xl flex items-center justify-center gap-2"
                  >
                    <Icon name="mdi:send" class="w-5 h-5" />
                    Odeslat zprávu
                  </button>

                  <p class="text-xs text-gray-500 text-center">
                    * Povinná pole. Vaše data budou zpracována v souladu s GDPR.
                  </p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Jak se k nám dostanete</h2>

          <div class="bg-white rounded-2xl overflow-hidden shadow-lg border-2 border-gray-200">
            <!-- Google Maps Embed -->
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2596.8144234567!2d17.4507!3d49.4555!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4713050f9b9b9b9b%3A0x1234567890abcdef!2sSvisle%20785%2F2%2C%20750%2002%20P%C5%99erov!5e0!3m2!1scs!2scz!4v1234567890123!5m2!1scs!2scz"
              width="100%"
              height="450"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Mapa ordinace MUDr. Jany Šlechtové - Svisle 2/785, Přerov"
            ></iframe>
          </div>

          <!-- Directions -->
          <div class="mt-8 grid md:grid-cols-3 gap-6">
            <div class="bg-white rounded-xl p-6 shadow-md border border-gray-200">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
                <Icon name="mdi:car" class="w-6 h-6 text-blue-600" />
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Autem</h3>
              <p class="text-sm text-gray-600">Parkování možné v okolních ulicích nebo na nedalekém parkovišti.</p>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-md border border-gray-200">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
                <Icon name="mdi:bus" class="w-6 h-6 text-blue-600" />
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">MHD</h3>
              <p class="text-sm text-gray-600">Zastávka nejbližší MHD je 3 minuty chůze od ordinace.</p>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-md border border-gray-200">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
                <Icon name="mdi:wheelchair-accessibility" class="w-6 h-6 text-blue-600" />
              </div>
              <h3 class="font-semibold text-gray-900 mb-2">Bezbariérový přístup</h3>
              <p class="text-sm text-gray-600">Ordinace je plně přístupná pro handicapované osoby.</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

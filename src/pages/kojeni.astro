---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import MobileMenu from '../components/common/MobileMenu.astro';
import Footer from '../components/common/Footer.astro';
import ValueCard from '../components/cards/ValueCard.astro';
import FeatureCard from '../components/cards/FeatureCard.astro';
import InfoBox from '../components/common/InfoBox.astro';
import PageHeader from '../components/common/PageHeader.astro';
import { Icon } from 'astro-icon/components';

// TypeScript interfaces pro čistotu kódu
interface Benefit {
  icon: string;
  title: string;
  description: string;
  bgColor: string;
}

interface Feature {
  icon: string;
  title: string;
  description: string;
  iconColor: string;
}

interface PageSection {
  title: string;
  description: string;
}

// Konstanty
const PAGE_SECTIONS: Record<string, PageSection> = {
  benefits: {
    title: 'Proč je kojení tak důležité?',
    description: 'Mateřské mléko je přesně ta tekutina, kterou příroda navrhla jako ideální výživu pro lidské mládě. Nikdo a nic ji doposud nepřekonalo.'
  },
  help: {
    title: 'S čím vám pomůžeme?',
    description: 'Řešíme jakékoliv potíže s kojením - od technických problémů až po emoční podporu.'
  }
} as const;

// Data pro benefity kojení
const benefits: Benefit[] = [
  {
    icon: 'mdi:food-apple',
    title: 'Ideální výživa',
    description: 'Mateřské mléko obsahuje přesně to, co dítě v daném okamžiku potřebuje. Jeho složení se mění každý den, každou hodinu přesně podle potřeb rostoucího miminka.',
    bgColor: 'bg-secondary-500'
  },
  {
    icon: 'mdi:shield-check',
    title: 'Posílení imunity',
    description: 'Kojení přináší dítěti protilátky, odrážející aktuální stav domova, zdraví či nemoci jeho členů a pomáhá budovat silný imunitní systém, který chrání před infekcemi a nemocemi.',
    bgColor: 'bg-secondary-500'
  },
  {
    icon: 'mdi:heart-pulse',
    title: 'Prevence nemocí',
    description: 'Kojené děti mají nižší riziko obezity, diabetu, astmatu, alergií a některých typů rakoviny v pozdějším věku. V tomto smyslu profituje i maminka.',
    bgColor: 'bg-secondary-600'
  },
  {
    icon: 'mdi:emoticon-happy',
    title: 'Emoční pouto',
    description: 'Kojení vytváří hluboké citové pouto mezi matkou a dítětem, důležité pro zdravý psychický vývoj.',
    bgColor: 'bg-secondary-400'
  },
  {
    icon: 'mdi:brain',
    title: 'Vývoj mozku',
    description: 'Stále nové a nové látky objevované v mateřském mléce podporují vývoj mozku a kognitivních funkcí, které si odnášíme do dospělosti.',
    bgColor: 'bg-secondary-500'
  },
  {
    icon: 'mdi:cash',
    title: 'Ekonomické',
    description: 'Kojení je zdarma, dostupné kdykoliv a kdekoliv, bez nutnosti přípravy, ohřívání nebo sterilizace lahviček a dudlíků.',
    bgColor: 'bg-secondary-500'
  }
];

// Data pro funkce laktační poradny
const features: Feature[] = [
  {
    icon: 'mdi:baby-face',
    title: 'Od prvních dní',
    description: 'Pomáháme již od narození - jak s prvním přiložením, tak později s řešením jakýchkoliv komplikací.',
    iconColor: 'text-secondary-500'
  },
  {
    icon: 'mdi:book-open',
    title: 'Edukace a materiály',
    description: 'Poskytujeme kvalitní edukační materiály, návody a tipy založené na aktuálních vědeckých poznatcích.',
    iconColor: 'text-secondary-500'
  },
  {
    icon: 'mdi:weight',
    title: 'Sledování prospívání',
    description: 'Pravidelně kontrolujeme hmotnostní přírůstky a vývoj miminka, abychom zajistili správný průběh kojení.',
    iconColor: 'text-secondary-400'
  }
];

// Běžné problémy s kojením
const commonIssues: string[] = [
  'Problémy s přisátím a technikou kojení',
  'Bolestivé bradavky a ragády',
  'Nedostatečná nebo nadměrná tvorba mléka',
  'Ucpané mléčné kanálky a zánět prsu',
  'Návrat do zaměstnání a odlučování',
  'Kojení dvojčat nebo nemocného dítěte',
  'Kombinované krmení (kojení + umělá výživa)',
  'Ukončování kojení v přirozeném tempu'
];

// Důležité informace
const infoItems: string[] = [
  'Kojení je přirozený proces, někdy vyžaduje trpělivost a podporu',
  'WHO doporučuje výhradní kojení po dobu 6 měsíců. Sledujeme prospívání a k doporučení světové organizace individuálně přistupujeme.',
  'Kojení lze úspěšně kombinovat s pracovní kariérou',
  'Z kojení profituje i maminka',
  'Každá kapka mateřského mléka má nevyčíslitelnou hodnotu'
];

// SEO metadata
const SEO = {
  title: 'Kojení a laktační poradenství - Zdravíčko',
  description: 'Odborná podpora při kojení od certifikovaných laktačních poradců. Pomůžeme vám s kojením od prvních dní až po přirozené ukončení.'
} as const;
---

<Layout title={SEO.title} description={SEO.description}>
  <Header activePage="kojeni" />
  <MobileMenu activePage="kojeni" />

  <!-- Hero sekce s animovaným pozadím -->
  <PageHeader
    title="Kojení není jen výživa. Je to stále nedoceněná láska, která se směje a dá se i zvážit v gramech"
    description="Certifikovaní laktační poradci s dlouholetou zkušeností"
    variant="pink"
  />

  <!-- Proč je kojení důležité -->
  <section class="py-16 md:py-20 bg-secondary-50">
    <div class="container mx-auto px-4">
      <!-- Úvodní text -->
      <div class="max-w-4xl mx-auto mb-16">
        <div class="prose prose-lg max-w-none text-gray-700 text-center">
          <p class="text-xl leading-relaxed">
            V dnešní vším přesycené a neustále nové trendy nabízející době, by se kojení mohlo jevit jako neefektivní zdlouhavý proces. Možná prastarý, možná někdy trpělivosti a vzájemnému naslouchání učící, přesto <strong>nejcennější dar, který může v prvních dnech a měsících maminka svému dítěti dát.</strong>
          </p>
          <p class="text-lg leading-relaxed mt-4 text-gray-600">
            Jsme proškolení laktační poradci s vlastní letitou praktickou zkušeností a rádi Vám pomůžeme s kojením od prvního přiložení miminka až po jeho přirozené ukončení.
          </p>
        </div>
      </div>

      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{PAGE_SECTIONS.benefits.title}</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">{PAGE_SECTIONS.benefits.description}</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {benefits.map(benefit => (
          <ValueCard
            icon={benefit.icon}
            title={benefit.title}
            description={benefit.description}
            bgColor={benefit.bgColor}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Na kojení vám nedovolíme zapomenout -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="bg-linear-to-br from-secondary-100 to-secondary-50 rounded-2xl p-8 border-2 border-secondary-200">
          <div class="flex items-start gap-4">
            <div class="shrink-0">
              <div class="w-12 h-12 bg-secondary-500 rounded-full flex items-center justify-center">
                <Icon name="mdi:alert-circle" class="w-6 h-6 text-white" />
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">Na kojení vám nedovolíme zapomenout</h3>
              <p class="text-gray-700 leading-relaxed">
                V moderní společnosti je někdy považováno za nepohodlné, zastaralé nebo nepraktické. Často čelí negativním reakcím ve veřejném prostoru. Každá maminka má právo kojit. Kojení je nejpřirozenější a nejzdravější způsob výživy miminka. Proto aktivně <strong>podporujeme a propagujeme kojení</strong> a pomáháme maminkám překonat jakékoliv překážky. Stejnou měrou chápeme opodstatněné důvody pro nekojení.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Naši laktační poradci -->
  <section id="nasi-poradci" class="py-16 md:py-20 bg-secondary-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto mb-12">
        <div class="bg-white rounded-2xl shadow-xl p-8 border-2 border-secondary-200">
          <div class="flex flex-col md:flex-row items-center gap-6">
            <div class="shrink-0">
              <div class="w-24 h-24 bg-linear-to-br from-secondary-500 to-secondary-400 rounded-full flex items-center justify-center">
                <Icon name="mdi:certificate" class="w-12 h-12 text-secondary-700" />
              </div>
            </div>
            <div class="flex-1 text-center md:text-left">
              <h3 class="text-2xl font-bold text-gray-900 mb-3">Certifikace a odbornost</h3>
              <p class="text-gray-700 leading-relaxed">
                <strong class="text-secondary-700">MUDr. Jana Šlechtová</strong> absolvovala akreditované školení laktačního poradenství. Pravidelně se účastníme konferencí a vzdělávacích akcí, abychom vám mohli poskytovat nejnovější a ověřené informace založené na vědeckých poznatcích a mezinárodních doporučeních (WHO, UNICEF, La Leche League).
Na akreditované školení se v rámci svého vzdělávání chystá i MUDr. Johana Podmolíková.
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {features.map(feature => (
          <FeatureCard
            icon={feature.icon}
            title={feature.title}
            description={feature.description}
            iconColor={feature.iconColor}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- S čím pomůžeme -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{PAGE_SECTIONS.help.title}</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">{PAGE_SECTIONS.help.description}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 mb-12">
          {commonIssues.map(issue => (
            <div class="flex items-start gap-4 bg-secondary-50 p-6 rounded-xl border border-secondary-200 hover:bg-secondary-50 transition-colors">
              <div class="shrink-0 mt-1">
                <Icon name="mdi:check-circle" class="w-6 h-6 text-secondary-500" />
              </div>
              <p class="text-gray-800 font-medium">{issue}</p>
            </div>
          ))}
        </div>

        <div class="rounded-2xl p-8 md:p-12 text-white text-center shadow-xl" style="background: linear-gradient(to right, var(--color-secondary-800), var(--color-secondary-700));">
          <Icon name="mdi:heart" class="w-16 h-16 mx-auto mb-6 opacity-90" />
          <h3 class="text-2xl md:text-3xl font-bold mb-4">
            Nejste v tom samy!
          </h3>
          <p class="text-lg md:text-xl mb-8 opacity-95 max-w-2xl mx-auto">
            Mnoho maminek má na začátku s kojením potíže. Je to naprosto přirozené a řešitelné. Jsme tady, abychom vám pomohli a podpořili vás na této klikaté cestě vedoucí ke spokojenému, zdravému człovíkovi.
          </p>
          <a
            href="/kontakt"
            class="inline-flex items-center gap-2 bg-white text-secondary-700 px-8 py-4 rounded-xl hover:bg-secondary-50 transition-colors font-semibold text-lg shadow-lg"
          >
            <Icon name="mdi:phone" class="w-6 h-6" />
            Kontaktujte nás
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Důležité informace -->
  <section class="py-16 md:py-24 bg-secondary-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <InfoBox
          title="Důležité informace o kojení"
          items={infoItems}
          icon="mdi:information-outline"
          color="pink"
        />
      </div>
    </div>
  </section>

  <Footer />
</Layout>

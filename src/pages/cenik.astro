---
import Layout from '../layouts/Layout.astro';
import Header from '../components/common/Header.astro';
import MobileMenu from '../components/common/MobileMenu.astro';
import PageHeader from '../components/common/PageHeader.astro';
import Footer from '../components/common/Footer.astro';
import CTAButtons from '../components/common/CTAButtons.astro';
import PriceSection from '../components/layouts/PriceSection.astro';
import InfoBox from '../components/common/InfoBox.astro';
import { priceSections, priceInfoItems } from '../data/pricing';
---

<Layout title="Ceník služeb - Zdravíčko" description="Přehled cen služeb dětské ordinace Zdravíčko. Základní péče je hrazena z veřejného zdravotního pojištění.">
  <Header activePage="cenik" />
  <MobileMenu activePage="cenik" />

  <PageHeader
    title="Ceník služeb"
    description="Základní péče je hrazena z veřejného zdravotního pojištění"
    gradient={true}
  />

  <!-- Pricing Page - Main Content -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">

        <!-- Price Sections -->
        {priceSections.map(section => (
          <PriceSection section={section} />
        ))}

        <!-- Important Information -->
        <InfoBox
          title="Důležité informace"
          items={priceInfoItems}
        />

        <!-- CTA Section -->
        <div class="mt-12 text-center">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Máte dotazy k ceníku?</h3>
          <p class="text-gray-600 mb-6">Rádi vám poskytneme podrobnější informace</p>
          <CTAButtons phoneLabel="Zavolat" emailLabel="Napsat email" />
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

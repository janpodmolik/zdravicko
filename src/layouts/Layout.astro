---
import '../styles/global.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import { SEO } from 'astro-seo';
import { ViewTransitions } from 'astro:transitions';
import StructuredData from '../components/common/StructuredData.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Pediatr Přerov - Zdravíčko | Dětský lékař MUDr. Jana Šlechtová',
  description = 'Hledáte pediatra v Přerově? Moderní dětská ordinace s individuálním přístupem. Kvalitní péči pro Vaše děti poskytuje MUDr. Jana Šlechtová a tým zkušených lékařů.'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href={canonicalURL} />

		<!-- Basic SEO -->
		<meta name="keywords" content="pediatr Přerov, dětský lékař Přerov, Zdravíčko, dětská ordinace, praktický lékař pro děti, MUDr. Jana Šlechtová, pediatrie Přerov" />
		<meta name="author" content="Zdravíčko - Dětská ordinace" />
		<meta name="robots" content="index, follow" />

		<ViewTransitions />

		<SEO
			title={title}
			description={description}
			canonical={canonicalURL.toString()}
			openGraph={{
				basic: {
					title: title,
					type: 'website',
					image: 'https://zdravicko.org/og-image.png',
					url: canonicalURL.toString(),
				},
				optional: {
					description: description,
					locale: 'cs_CZ',
					siteName: 'Zdravíčko',
				},
				image: {
					url: 'https://zdravicko.org/og-image.png',
					secureUrl: 'https://zdravicko.org/og-image.png',
					alt: 'Zdravíčko - Dětská ordinace Přerov',
					type: 'image/png',
					width: 1200,
					height: 630,
				}
			}}
			twitter={{
				card: 'summary_large_image',
				site: '@zdravicko',
				title: title,
				description: description,
				image: 'https://zdravicko.org/og-image.png',
				imageAlt: 'Zdravíčko - Dětská ordinace Přerov',
			}}
		/>

		<StructuredData />
	</head>
	<body class="font-sans antialiased">
		<slot />
		<script>
			import { updateOpeningHours } from '../scripts/updateOpeningHours';

			// Spustíme při každém načtení stránky (včetně View Transitions)
			document.addEventListener('astro:page-load', () => {
				updateOpeningHours();

				// Hash scrollování
				const hash = window.location.hash;
				if (hash) {
					const target = document.querySelector(hash);
					if (target) {
						setTimeout(() => {
							target.scrollIntoView({ behavior: 'smooth' });
						}, 50);
					}
				}
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
	}
</style>

---
import '../styles/global.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import { SEO } from 'astro-seo';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Zdravíčko - Dětská ordinace',
  description = 'Moderní dětská ordinace s komplexní péčí o vaše děti. Odborné lékařské služby v přátelském prostředí.'
} = Astro.props;
---

<!doctype html>
<html lang="cs">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<SEO
			title={title}
			description={description}
			openGraph={{
				basic: {
					title: title,
					type: 'website',
					image: '/og-image.jpg',
				}
			}}
		/>
	</head>
	<body class="font-sans antialiased">
		<slot />
		<script>
			import { updateOpeningHours } from '../scripts/updateOpeningHours';

			// Spustíme při každém načtení stránky (včetně View Transitions)
			document.addEventListener('astro:page-load', () => {
				updateOpeningHours();

				// Hash scrollování
				const hash = window.location.hash;
				if (hash) {
					const target = document.querySelector(hash);
					if (target) {
						setTimeout(() => {
							target.scrollIntoView({ behavior: 'smooth' });
						}, 50);
					}
				}
			});
		</script>
	</body>
</html>

<style is:global>
	:root {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
	}
</style>

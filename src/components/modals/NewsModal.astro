---
/**
 * NewsModal - Modalová komponenta pro zobrazení detailu aktuality
 * Podobné RoomInfoModal, ale pro aktuality
 */
import { Icon } from 'astro-icon/components';
import { formatDateShort } from '../../utils/dateFormat';
import { getNewsIconBg } from '../../utils/newsColors';
import type { CollectionEntry } from 'astro:content';

interface Props {
  news: CollectionEntry<'news'>;
}

const { news } = Astro.props;
const modalId = `news-${news.id}`;

// Renderovat markdown obsah
const { Content } = await news.render();

// Získat styly podle barvy
const iconBgClass = getNewsIconBg(news.data.color);
---

<div
  id={`modal-${modalId}`}
  class="fixed inset-0 bg-opacity-50 z-50 flex items-center justify-center p-4 backdrop-blur-sm"
  style="display: none; background-color: rgba(0, 0, 0, 0.5);"
>
  <div class="bg-white rounded-2xl max-w-3xl w-full max-h-[85vh] overflow-y-auto shadow-2xl modal-content">
    <!-- Header -->
    <div class="sticky top-0 bg-white border-b border-gray-200 p-6 flex items-start justify-between">
      <div class="flex items-start gap-4 flex-1">
        <div class:list={[
          'w-12 h-12 rounded-xl flex items-center justify-center shrink-0 shadow-lg',
          iconBgClass
        ]}>
          <Icon name={news.data.icon} class="w-6 h-6 text-white" />
        </div>
        <div class="flex-1 min-w-0">
          <h2 class="text-2xl font-bold text-gray-900 leading-tight">{news.data.title}</h2>
          <time class="text-sm text-gray-500 mt-1 block">
            {formatDateShort(news.data.date.toISOString())}
          </time>
        </div>
      </div>
      <button
        class="text-gray-400 hover:text-gray-600 rounded-full p-2 transition-colors hover:bg-gray-100 modal-close-btn shrink-0 ml-2"
        data-modal-id={modalId}
        aria-label="Zavřít"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Content -->
    <div class="p-8 prose prose-lg max-w-none text-gray-700">
      <Content />
    </div>

    <!-- Footer -->
    <div class="bg-gray-50 px-8 py-4 flex justify-end border-t">
      <button
        class="px-6 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 text-gray-900 font-medium transition-colors modal-close-btn"
        data-modal-id={modalId}
      >
        Zavřít
      </button>
    </div>
  </div>
</div>

<style>
  /* Modal animations */
  @keyframes modalFadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes modalSlideUp {
    from {
      transform: translateY(100px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Apply animations when modal is visible */
  [id^="modal-"][style*="display: flex"] {
    animation: modalFadeIn 0.2s ease-out;
  }

  [id^="modal-"][style*="display: flex"] .modal-content {
    animation: modalSlideUp 0.3s ease-out;
  }
</style>

<script define:vars={{ modalId }}>
  // Inicializace modal handlerů pro tento konkrétní modal
  function initModal() {
    const modal = document.getElementById(`modal-${modalId}`);
    if (!modal) return;

    // Zavření přes close tlačítka
    const closeButtons = modal.querySelectorAll('.modal-close-btn');
    closeButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        modal.style.display = 'none';
        document.body.style.overflow = '';
      });
    });

    // Zavření kliknutím mimo modal (na overlay)
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.style.display = 'none';
        document.body.style.overflow = '';
      }
    });

    // Zavření ESC klávesou
    const handleEscape = (e) => {
      if (e.key === 'Escape' && modal.style.display === 'flex') {
        modal.style.display = 'none';
        document.body.style.overflow = '';
      }
    };

    document.addEventListener('keydown', handleEscape);
  }

  // Inicializovat při načtení i po view transitions
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initModal);
  } else {
    initModal();
  }

  document.addEventListener('astro:page-load', initModal);
</script>

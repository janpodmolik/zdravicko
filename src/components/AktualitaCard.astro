---
import { Icon } from 'astro-icon/components';
import { formatDateShort } from '../utils/dateFormat';
import type { AktualitaItem } from '../data/aktuality';

interface Props {
  aktualita: AktualitaItem;
  showExcerpt?: boolean;
}

const { aktualita, showExcerpt = true } = Astro.props;

const categoryConfig = {
  info: {
    icon: 'mdi:information',
    color: 'blue',
    label: 'Informace'
  },
  health: {
    icon: 'mdi:medical-bag',
    color: 'green',
    label: 'Zdraví'
  },
  announcement: {
    icon: 'mdi:bullhorn',
    color: 'orange',
    label: 'Oznámení'
  },
  event: {
    icon: 'mdi:calendar-star',
    color: 'purple',
    label: 'Akce'
  }
};

const config = categoryConfig[aktualita.category];
---

<article class="bg-white rounded-xl border-2 border-gray-200 p-6 hover:border-blue-400 hover:shadow-md transition-all">
  <div class="flex items-start gap-4">
    <div class={`w-12 h-12 bg-${config.color}-600 rounded-lg flex items-center justify-center shrink-0`}>
      <Icon name={config.icon} class="w-6 h-6 text-white" />
    </div>
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-2">
        <span class={`text-xs font-medium text-${config.color}-600 bg-${config.color}-50 px-2 py-1 rounded`}>
          {config.label}
        </span>
        {aktualita.important && (
          <span class="text-xs font-medium text-red-600 bg-red-50 px-2 py-1 rounded flex items-center gap-1">
            <Icon name="mdi:alert-circle" class="w-3 h-3" />
            Důležité
          </span>
        )}
        <span class="text-xs text-gray-500 ml-auto">
          {formatDateShort(aktualita.date)}
        </span>
      </div>
      <h3 class="font-bold text-lg text-gray-900 mb-2">
        {aktualita.title}
      </h3>
      {showExcerpt && (
        <p class="text-gray-600 text-sm leading-relaxed">
          {aktualita.excerpt}
        </p>
      )}
    </div>
  </div>
</article>

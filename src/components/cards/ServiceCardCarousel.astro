---
/**
 * Carousel karta pro služby
 * Optimalizovaná pro horizontální scrollování
 */
import { Icon } from 'astro-icon/components';

interface Props {
  icon: string;
  title: string;
  description: string;
  href: string;
  color?: 'blue' | 'cyan' | 'purple' | 'pink';
}

const { icon, title, description, href, color = 'blue' } = Astro.props;

const colorClasses = {
  blue: 'border-blue-100 hover:border-blue-500 text-blue-600',
  cyan: 'border-cyan-100 hover:border-cyan-500 text-cyan-600',
  purple: 'border-purple-100 hover:border-purple-500 text-purple-600',
  pink: 'border-pink-100 hover:border-pink-500 text-pink-600'
};
---

<a
  href={href}
  class:list={[
    'flex-none w-[280px] md:w-[320px] p-5 md:p-6',
    'bg-white border-2 rounded-xl',
    'hover:shadow-lg transition-all snap-start',
    colorClasses[color]
  ]}
>
  <Icon name={icon} class="w-10 h-10 md:w-12 md:h-12 mb-4" />
  <h3 class="font-semibold text-lg md:text-xl mb-2 text-gray-900">
    {title}
  </h3>
  <p class="text-sm md:text-base text-gray-600 line-clamp-2">
    {description}
  </p>
</a>

---
/**
 * PriceItem - Položka ceníku
 *
 * Zobrazuje jednotlivou službu s názvem, popisem a cenou
 */
interface Props {
  title: string;
  description: string;
  price: string;
  isLast?: boolean;
}

const { title, description, price, isLast = false } = Astro.props;
---

<div class:list={[
  'flex justify-between items-center py-4',
  !isLast && 'border-b',
  !isLast && Astro.slots.has('borderColor') ? '' : 'border-gray-200'
]}>
  <div>
    <h3 class="font-semibold text-gray-900 mb-1">{title}</h3>
    <p class="text-sm text-gray-600">{description}</p>
  </div>
  <span class:list={[
    'font-semibold text-lg whitespace-nowrap ml-4',
    'text-gray-900'
  ]}>
    {price}
  </span>
</div>

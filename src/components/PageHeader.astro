---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  description: string;
  badge?: {
    icon: string;
    text: string;
  };
}

const { title, description, badge } = Astro.props;
---

<section class="pt-20 pb-10 md:pt-32 md:pb-16 bg-linear-to-br from-blue-50 via-cyan-50 to-blue-100">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      {badge && (
        <div class="inline-flex items-center gap-2 bg-blue-600 text-white px-3 py-1.5 md:px-4 md:py-2 rounded-full text-xs md:text-sm font-medium mb-4 md:mb-6">
          <Icon name={badge.icon} class="w-4 h-4 md:w-5 md:h-5" />
          <span>{badge.text}</span>
        </div>
      )}
      <h1 class="text-3xl md:text-5xl font-bold text-gray-900 mb-4 md:mb-6">
        {title}
      </h1>
      <p class="text-base md:text-xl text-gray-600 leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</section>

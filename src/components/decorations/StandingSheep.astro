---
/**
 * Jednoduchá dekorace stojící ovečky.
 * Umožňuje nastavit pozici/šířku přes Tailwind třídy, jinak se stará sama o z-index
 * a drobné zesvětlení spodního okraje, aby nezůstal vidět pás z původní grafiky.
 */
import standingSheepImage from '../../assets/standing-sheep.png';

interface Props {
  positionClass?: string;
  widthClass?: string;
  widthMdClass?: string;
  marginClass?: string;
  zIndex?: number;
}

const {
  positionClass = 'right-0 bottom-0',
  widthClass = 'w-[120px]',
  widthMdClass = 'md:w-[180px]',
  marginClass = 'mr-4 md:mr-8',
  zIndex = 20,
}: Props = Astro.props;

const containerClasses = [
  'standing-sheep',
  'absolute',
  positionClass,
  widthClass,
  widthMdClass,
  marginClass,
].join(' ');
---

<div class={containerClasses} aria-hidden="true" style={`z-index: ${zIndex};`}>
  <img
    src={standingSheepImage.src}
    alt=""
    class="sheep-image"
    loading="lazy"
  />
</div>

<style>
  .standing-sheep {
    pointer-events: none;
    user-select: none;
  }

  .standing-sheep .sheep-image {
    display: block;
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .standing-sheep::after {
    content: '';
    position: absolute;
    left: 6%;
    right: 6%;
    bottom: 0;
    height: 14px;
    background: linear-gradient(to top, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0) 100%);
    pointer-events: none;
  }
</style>

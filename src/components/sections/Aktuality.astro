---
import { Icon } from 'astro-icon/components';
import AktualitaCard from '../AktualitaCard.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  aktuality: CollectionEntry<'news'>[];
}

const { aktuality } = Astro.props;
---

<section id="aktuality" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Aktuality</h2>
        <p class="text-lg text-gray-600">
          Aktuální informace z naší ordinace
        </p>
      </div>
      
      {aktuality.length > 0 ? (
        <div class="space-y-4">
          {aktuality.map((news) => (
            <AktualitaCard news={news} />
          ))}
          
          <div class="text-center mt-8">
            <a 
              href="/aktuality"
              class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
            >
              Všechny aktuality
              <Icon name="mdi:arrow-right" class="w-5 h-5" />
            </a>
          </div>
        </div>
      ) : (
        <div class="text-center py-12 bg-gray-50 rounded-xl">
          <Icon name="mdi:newspaper-variant-outline" class="w-16 h-16 text-gray-400 mx-auto mb-4" />
          <p class="text-gray-500">Momentálně nejsou k dispozici žádné aktuality</p>
        </div>
      )}
    </div>
  </div>
</section>

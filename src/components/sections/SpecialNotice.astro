---
import { Icon } from 'astro-icon/components';
import type { CollectionEntry } from 'astro:content';

interface Props {
  notice: CollectionEntry<'special_notice'>;
}

const { notice } = Astro.props;
---

<section class="py-8 bg-gradient-to-r from-amber-50 to-orange-50">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="bg-white rounded-2xl shadow-lg border-2 border-amber-300 p-5 md:p-6 relative">
        <div class="absolute top-4 right-4 w-10 h-10 md:w-12 md:h-12 bg-gradient-to-br from-amber-500 to-orange-500 rounded-lg flex items-center justify-center opacity-80">
          <Icon name="mdi:alert-circle" class="w-6 h-6 md:w-7 md:h-7 text-white" />
        </div>
        <div class="pr-14 md:pr-16">
          <h3 class="font-bold text-lg md:text-xl text-gray-900 mb-2">
            Důležité oznámení
          </h3>
          <p class="text-gray-700 text-sm md:text-base leading-relaxed">
            {notice.data.message}
          </p>
          {notice.data.hours && (
            <div class="mt-3 inline-flex items-center gap-2 text-amber-700 bg-amber-50 px-3 py-1.5 rounded-lg text-sm">
              <Icon name="mdi:clock-outline" class="w-4 h-4" />
              <span class="font-semibold">{notice.data.hours}</span>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</section>

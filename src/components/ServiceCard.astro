---
/**
 * ServiceCard - Karta pro zobrazení služby
 *
 * Zobrazuje detail služby včetně ikony, názvu, popisu, trvání a ceny.
 * Používá dynamické barvy podle typu služby.
 */
import { Icon } from 'astro-icon/components';
import type { Service } from '../data/services';
import { colorClasses } from '../utils/colors';

interface Props {
  service: Service;
}

const { service } = Astro.props;
const colors = colorClasses[service.color];
---

<a
  href={`/sluzby/${service.slug}`}
  class:list={[
    'block bg-white rounded-xl border-2',
    'hover:shadow-lg transition-all',
    colors.border,
    colors.hoverBorder
  ]}
  aria-label={`Zobrazit detail služby: ${service.title}`}
>
  <article class="p-6">
    <!-- Header s ikonou a základními informacemi -->
    <div class="flex items-start gap-4 mb-4">
      <div class:list={['w-14 h-14 rounded-lg flex items-center justify-center shrink-0', colors.bg]}>
        <Icon name={service.icon} class="w-7 h-7 text-white" aria-hidden="true" />
      </div>
      <div class="flex-1 min-w-0">
        <h3 class="text-xl font-bold text-gray-900 mb-2">
          {service.title}
        </h3>
        <p class="text-gray-600 text-sm leading-relaxed">
          {service.excerpt}
        </p>
      </div>
    </div>

    <!-- Meta informace (trvání, cena) -->
    {(service.duration || service.price) && (
      <div class="space-y-2 mb-4">
        {service.duration && (
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <Icon name="mdi:clock-outline" class="w-4 h-4" aria-hidden="true" />
            <span>{service.duration}</span>
          </div>
        )}

        {service.price && (
          <div class="flex items-center gap-2 text-sm text-gray-500">
            <Icon name="mdi:currency-eur" class="w-4 h-4" aria-hidden="true" />
            <span>{service.price}</span>
          </div>
        )}
      </div>
    )}

    <!-- CTA odkaz -->
    <div class:list={['inline-flex items-center gap-2 font-medium text-sm', colors.text]}>
      <span>Více informací</span>
      <Icon name="mdi:arrow-right" class="w-4 h-4" aria-hidden="true" />
    </div>
  </article>
</a>

---
import { Icon } from 'astro-icon/components';
import AnimatedBackground from './AnimatedBackground.astro';
import GradientBackground from './GradientBackground.astro';

interface Props {
  title: string;
  description: string;
  variant?: 'blue' | 'pink';
  gradient?: boolean;
}

const { title, description, variant = 'blue', gradient = false } = Astro.props;
---

{gradient ? (
  <section class="pt-12 pb-6 md:pt-16 md:pb-12 relative overflow-hidden min-h-[200px] md:min-h-[280px]">
    <GradientBackground />
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-2 md:mb-5 drop-shadow-lg">
          {title}
        </h1>
        <p class="text-base md:text-xl text-white/95 leading-relaxed drop-shadow-md">
          {description}
        </p>
      </div>
    </div>
  </section>
) : (
  <AnimatedBackground variant={variant} className="pt-12 pb-6 md:pt-16 md:pb-12 min-h-[200px] md:min-h-[280px]">
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-2 md:mb-5" style="opacity: 0.95;">
          {title}
        </h1>
        <p class="text-base md:text-xl text-white/85 leading-relaxed">
          {description}
        </p>
      </div>
    </div>
  </AnimatedBackground>
)}

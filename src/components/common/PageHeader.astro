---
import { Icon } from 'astro-icon/components';
import AnimatedBackground from './AnimatedBackground.astro';
import GradientBackground from './GradientBackground.astro';

interface Props {
  title: string;
  description: string;
  variant?: 'blue' | 'pink' | 'orange' | 'green' | 'purple';
  animated?: boolean;
  gradient?: boolean;
  badge?: {
    icon: string;
    text: string;
  };
}

const { title, description, variant = 'blue', animated = false, gradient = false, badge } = Astro.props;
---

{gradient ? (
  <section class="pt-12 pb-6 md:pt-16 md:pb-12 relative overflow-hidden">
    <GradientBackground />
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        {badge && (
          <div class:list={[
            'inline-flex items-center gap-2 text-white px-3 py-1.5 md:px-4 md:py-2 rounded-full text-xs md:text-sm font-medium mb-2 md:mb-5 shadow-lg backdrop-blur-sm',
            'bg-white/20 border border-white/30'
          ]}>
            <Icon name={badge.icon} class="w-4 h-4 md:w-5 md:h-5" />
            <span>{badge.text}</span>
          </div>
        )}
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-2 md:mb-5 drop-shadow-lg">
          {title}
        </h1>
        <p class="text-base md:text-xl text-white/95 leading-relaxed drop-shadow-md">
          {description}
        </p>
      </div>
    </div>
  </section>
) : (
  <AnimatedBackground variant={variant} className="pt-12 pb-6 md:pt-16 md:pb-12">
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        {badge && (
          <div class:list={[
            'inline-flex items-center gap-2 text-white px-3 py-1.5 md:px-4 md:py-2 rounded-full text-xs md:text-sm font-medium mb-2 md:mb-5',
            variant === 'pink' ? 'bg-pink-600' : variant === 'orange' ? 'bg-orange-600' : variant === 'green' ? 'bg-green-600' : variant === 'purple' ? 'bg-purple-600' : 'bg-blue-600'
          ]}>
            <Icon name={badge.icon} class="w-4 h-4 md:w-5 md:h-5" />
            <span>{badge.text}</span>
          </div>
        )}
        <h1 class="text-3xl md:text-5xl font-bold text-white mb-2 md:mb-5" style="opacity: 0.95;">
          {title}
        </h1>
        <p class="text-base md:text-xl text-white/85 leading-relaxed">
          {description}
        </p>
      </div>
    </div>
  </AnimatedBackground>
)}

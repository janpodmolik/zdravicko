---
import { Icon } from 'astro-icon/components';
import { contactInfo } from '../../data/contact';

interface Props {
  variant?: 'default' | 'colored';
  color?: string; // Pro barevnou variantu (bg-blue-600, bg-purple-600 atd.)
  showEmail?: boolean;
  phoneLabel?: string;
  emailLabel?: string;
}

const {
  variant = 'default',
  color = 'bg-[#5085c6]',
  showEmail = true,
  phoneLabel = 'Zavolejte n√°m',
  emailLabel = 'Napsat email'
} = Astro.props;

const phoneButtonClasses = variant === 'colored'
  ? `inline-flex items-center justify-center gap-2 px-6 py-3 ${color} text-white font-semibold rounded-lg hover:opacity-90 transition-opacity`
  : 'inline-flex items-center justify-center gap-2 px-6 py-3 bg-[#5085c6] text-white font-semibold rounded-lg hover:opacity-90 transition-opacity';

const emailButtonClasses = 'inline-flex items-center justify-center gap-2 px-6 py-3 bg-white text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition-colors border-2 border-gray-200';
---

<div class="flex flex-col sm:flex-row gap-4 justify-center">
  <a
    href={`tel:${contactInfo.phones.doctor.number}`}
    class={phoneButtonClasses}
  >
    <Icon name="mdi:phone" class="w-5 h-5" />
    {phoneLabel}
  </a>
  {showEmail && (
    <a
      href="/kontakt"
      class={emailButtonClasses}
    >
      <Icon name="mdi:email" class="w-5 h-5" />
      {emailLabel}
    </a>
  )}
</div>

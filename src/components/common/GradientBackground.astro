---
/**
 * Moderní gradientové pozadí s blur efekty
 * Lehké, čisté CSS řešení bez závislostí
 */
export interface Props {
  /** Primární barva (hex) */
  primaryColor?: string;
  /** Sekundární barva (hex) */
  secondaryColor?: string;
}

const {
  primaryColor = '#3a6fa8',
  secondaryColor = '#6ba3e0',
} = Astro.props;
---

<div class="gradient-bg" aria-hidden="true"></div>

<style define:vars={{ primaryColor, secondaryColor }}>
  .gradient-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
    pointer-events: none;
    /* Stejný gradient jako Hero s dragonflies */
    background: linear-gradient(135deg, #3a6fa8 0%, #5085c6 25%, #6ba3e0 50%, #5085c6 75%, #4070b0 100%);
    /* Safari fix pro smooth přechody mezi stránkami */
    transform: translateZ(0);
    will-change: transform;
    backface-visibility: hidden;
  }
</style>

---
/**
 * Moderní gradientové pozadí s blur efekty
 * Lehké, čisté CSS řešení bez závislostí
 */
export interface Props {
  /** Primární barva (hex) */
  primaryColor?: string;
  /** Sekundární barva (hex) */
  secondaryColor?: string;
}

const {
  primaryColor = '#3a6fa8',
  secondaryColor = '#6ba3e0',
} = Astro.props;
---

<div class="gradient-bg" aria-hidden="true"></div>

<style define:vars={{ primaryColor, secondaryColor }}>
  .gradient-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
    pointer-events: none;
    background:
      radial-gradient(circle at 15% 18%, rgba(255, 255, 255, 0.75) 0%, transparent 58%),
      radial-gradient(circle at 82% 78%, rgba(255, 255, 255, 0.55) 0%, transparent 62%),
      radial-gradient(circle at 50% 42%, rgba(107, 163, 224, 0.35) 0%, transparent 60%),
      linear-gradient(135deg, var(--primaryColor) 0%, var(--secondaryColor) 100%);
    /* Safari fix pro smooth přechody mezi stránkami */
    transform: translateZ(0);
    will-change: transform;
    backface-visibility: hidden;
  }

  @media (max-width: 768px) {
    .gradient-bg {
      background:
        radial-gradient(circle at 20% 22%, rgba(255, 255, 255, 0.7) 0%, transparent 55%),
        radial-gradient(circle at 78% 80%, rgba(255, 255, 255, 0.5) 0%, transparent 58%),
        radial-gradient(circle at 50% 46%, rgba(107, 163, 224, 0.3) 0%, transparent 58%),
        linear-gradient(135deg, var(--primaryColor) 0%, var(--secondaryColor) 100%);
    }
  }
</style>

---
/**
 * InfoBox - Informační box s ikonou a seznamem
 *
 * Použití: Důležité informace, tipy, návody
 */
import { Icon } from 'astro-icon/components';

interface Props {
  icon?: string;
  title?: string;
  items: string[];
  variant?: 'blue' | 'amber' | 'green' | 'pink';
  color?: 'blue' | 'amber' | 'green' | 'pink'; // Alias for variant
}

const {
  icon = 'mdi:information',
  title = 'Důležité informace:',
  items,
  variant,
  color
} = Astro.props;

// Use color prop if provided, otherwise use variant, default to blue
const selectedVariant = color || variant || 'blue';

const variantClasses = {
  blue: {
    bg: 'bg-[#5085c6]/5',
    border: 'border-[#5085c6]/30',
    icon: 'text-[#5085c6]'
  },
  amber: {
    bg: 'bg-amber-50',
    border: 'border-amber-300',
    icon: 'text-amber-600'
  },
  green: {
    bg: 'bg-green-50',
    border: 'border-green-200',
    icon: 'text-green-600'
  },
  pink: {
    bg: 'bg-pink-50',
    border: 'border-pink-200',
    icon: 'text-pink-600'
  }
};

const colors = variantClasses[selectedVariant];
---

<div class:list={['p-6 rounded-xl border-2', colors.bg, colors.border]}>
  <div class="flex gap-3">
    <Icon name={icon} class:list={['w-6 h-6 shrink-0 mt-0.5', colors.icon]} aria-hidden="true" />
    <div>
      <p class="font-semibold text-gray-900 mb-2">{title}</p>
      <ul class="text-sm text-gray-700 space-y-1">
        {items.map(item => (
          <li>• {item}</li>
        ))}
      </ul>
    </div>
  </div>
</div>

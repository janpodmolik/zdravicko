---
interface Props {
  heading: string;
  steps: Array<{
    title: string;
    description: string;
  }>;
  color?: string;
}

const { heading, steps, color = 'blue' } = Astro.props;

const colorClasses: Record<string, string> = {
  blue: 'bg-blue-600',
  cyan: 'bg-cyan-600',
  purple: 'bg-purple-600',
  pink: 'bg-pink-600',
  green: 'bg-green-600',
  orange: 'bg-orange-600',
  red: 'bg-red-600',
  yellow: 'bg-yellow-600',
  indigo: 'bg-indigo-600',
  teal: 'bg-teal-600',
};

const bgColor = colorClasses[color] || colorClasses.blue;
---

<div class="mb-12">
  <h3 class="text-2xl font-bold text-gray-900 mb-8">{heading}</h3>
  <div class="space-y-6">
    {steps.map((step, index) => (
      <div class="flex gap-6">
        <div class="shrink-0">
          <div class={`w-12 h-12 ${bgColor} text-white rounded-full flex items-center justify-center font-bold text-xl`}>
            {index + 1}
          </div>
        </div>
        <div class="flex-1">
          <h4 class="text-xl font-bold text-gray-900 mb-2">{step.title}</h4>
          <p class="text-gray-700 leading-relaxed">{step.description}</p>
        </div>
      </div>
    ))}
  </div>
</div>

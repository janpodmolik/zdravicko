---
/**
 * ImageBlock - Obrázek s rámečkem a popiskem
 */

interface Props {
  src: string;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<div class="my-8">
  <div class="relative overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm hover:shadow-md transition-shadow duration-200">
    <img
      src={src}
      alt={alt}
      class="w-full h-auto object-cover"
      loading="lazy"
    />
  </div>
  {caption && (
    <p class="mt-3 text-sm text-gray-600 text-center italic px-4">
      {caption}
    </p>
  )}
</div>

---
import { Icon } from 'astro-icon/components';

interface Props {
  heading: string;
  items: string[];
  color?: string;
}

const { heading, items, color = 'blue' } = Astro.props;

const colorClasses: Record<string, string> = {
  blue: 'text-blue-600',
  cyan: 'text-cyan-600',
  purple: 'text-purple-600',
  pink: 'text-pink-600',
  green: 'text-green-600',
  orange: 'text-orange-600',
  red: 'text-red-600',
  yellow: 'text-yellow-600',
  indigo: 'text-indigo-600',
  teal: 'text-teal-600',
};

const iconColor = colorClasses[color] || colorClasses.blue;
---

<div class="bg-gray-50 rounded-2xl p-8 mb-8">
  <h3 class="text-2xl font-bold text-gray-900 mb-6">{heading}</h3>
  <div class="grid md:grid-cols-2 gap-4">
    {items.map((item) => (
      <div class="flex items-start gap-3">
        <Icon name="mdi:check-circle" class={`w-6 h-6 ${iconColor} shrink-0 mt-0.5`} />
        <span class="text-gray-700">{item}</span>
      </div>
    ))}
  </div>
</div>

---
/**
 * Hero sekce s Lottie animací ovečky vpravo
 * Ovečka je umístěna napravo od textu
 */

export interface Props {
  /** Hlavní nadpis */
  title?: string;
  /** Popisek pod nadpisem */
  description?: string;
  /** Zobrazit CTA tlačítka */
  showButtons?: boolean;
}

const {
  title = 'Naše služby',
  description = 'Komplexní pediatrická péče s individuálním přístupem',
  showButtons = true,
} = Astro.props;

// Import CTAButtons pokud jsou potřeba
import CTAButtons from '../common/CTAButtons.astro';
---

<section class="relative py-12 md:py-20" style="background: linear-gradient(135deg, #3a6fa8 0%, #5085c6 25%, #6ba3e0 50%, #5085c6 75%, #4070b0 100%); overflow: visible;">
  <div class="container mx-auto px-6 sm:px-8 relative z-10">
    <div class="flex flex-nowrap items-center justify-between gap-5 sm:gap-8 lg:gap-14 max-w-6xl mx-auto">
      <!-- Text Content - Left Side -->
      <div class="flex-1 min-w-0 max-w-xl text-left">
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold text-white mb-4 md:mb-6 leading-tight" style="text-shadow: 0 2px 10px rgba(0,0,0,0.4), 0 4px 20px rgba(0,0,0,0.3);">
          {title}
        </h1>
        <p class="text-base md:text-xl text-white/95 mb-6 md:mb-8" style="text-shadow: 0 1px 5px rgba(0,0,0,0.4), 0 2px 10px rgba(0,0,0,0.3);">
          {description}
        </p>
        {showButtons && (
          <CTAButtons />
        )}
      </div>

      <!-- Sheep Animation - Right Side -->
      <div class="flex-shrink-0 flex items-center justify-center -my-4 md:my-0">
        <div class="w-[210px] sm:w-[260px] md:w-[300px] lg:w-[340px] xl:w-[380px]">
          <dotlottie-player
            src="/animations/sheep.json"
            background="transparent"
            speed="1"
            style="width: 100%; height: auto;"
            loop
            autoplay
          ></dotlottie-player>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Import Lottie player
  import '@dotlottie/player-component';
</script>

---
import { Icon } from 'astro-icon/components';
import type { OpeningHoursInfo } from '../../utils/openingHours';
import { contactInfo } from '../../data/contact';

interface Props {
  todayInfo: OpeningHoursInfo;
}

const { todayInfo } = Astro.props;

// Výchozí styl je vždy "normal" - client-side script aplikuje warning styling pokud platí special notice
const cardAccentDefault = "border-blue-100 hover:border-blue-400";
const iconAccentDefault = "bg-linear-to-br from-blue-500 to-blue-600";
const hoursTextDefault = "text-gray-600";
---

<section class="py-6 md:py-8 bg-linear-to-br from-gray-50 to-blue-50 relative">
  <div class="container mx-auto px-4 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-3 md:gap-4 max-w-5xl mx-auto">
      <!-- ORDINAČNÍ HODINY -->
      <a
        href="/ordinacni-hodiny"
        class="group"
      >
        <div
          class:list={[
            "flex items-center gap-3 p-4 bg-white rounded-xl border-2 transition-all hover:shadow-lg h-full",
            cardAccentDefault
          ]}
          data-opening-quick-card
          data-opening-node="quick-container"
          data-opening-default-classes={cardAccentDefault}
        >
          <div
            class:list={[
              "w-10 h-10 rounded-lg flex items-center justify-center shrink-0 relative group-hover:scale-110 transition-transform",
              iconAccentDefault
            ]}
            data-opening-node="quick-icon"
            data-opening-default-classes={iconAccentDefault}
          >
            <Icon
              name="mdi:clock-outline"
              class="w-5 h-5 text-white"
              data-opening-icon="default"
            />
            <Icon
              name="mdi:alert-circle-outline"
              class="w-5 h-5 text-white hidden"
              data-opening-icon="modified"
            />
          </div>
          <div class="flex-1 min-w-0">
            <h3
              class="font-bold text-sm text-gray-900 leading-tight mb-0.5"
              data-opening-title
            >
              {todayInfo.title}
            </h3>
            {(todayInfo.hours || todayInfo.isClosed) && (
              <p
                class:list={[
                  "text-xs font-medium",
                  hoursTextDefault
                ]}
                data-opening-hours
                data-opening-node="quick-hours"
                data-opening-default-classes={hoursTextDefault}
              >
                {todayInfo.hours ?? 'Zavřeno'}
              </p>
            )}
          </div>
        </div>
      </a>

      <!-- TELEFONNÍ KONTAKT -->
      <div class="group">
        <div class="flex items-center gap-3 p-4 bg-white rounded-xl border-2 border-cyan-100 transition-all hover:border-cyan-400 hover:shadow-lg h-full">
          <div class="w-10 h-10 bg-linear-to-br from-cyan-500 to-cyan-600 rounded-lg flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform">
            <Icon name="mdi:phone" class="w-5 h-5 text-white" />
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-bold text-sm text-gray-900 leading-tight mb-1">Telefonní kontakt</h3>
            <div class="space-y-0.5">
              <a
                href={`tel:${contactInfo.phones.doctor.number}`}
                class="block text-cyan-600 hover:text-cyan-700 text-xs font-medium transition-colors"
              >
                {contactInfo.phones.doctor.display}
                <span class="text-gray-500 ml-1">(Doktorka)</span>
              </a>
              <a
                href={`tel:${contactInfo.phones.nurse.number}`}
                class="block text-cyan-600 hover:text-cyan-700 text-xs font-medium transition-colors"
              >
                {contactInfo.phones.nurse.display}
                <span class="text-gray-500 ml-1">(Sestřička)</span>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- ADRESA -->
      <a
        href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(contactInfo.address.full)}`}
        target="_blank"
        rel="noopener noreferrer"
        class="group"
      >
        <div class="flex items-center gap-3 p-4 bg-white rounded-xl border-2 border-purple-100 transition-all hover:border-purple-400 hover:shadow-lg h-full">
          <div class="w-10 h-10 bg-linear-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform">
            <Icon name="mdi:map-marker" class="w-5 h-5 text-white" />
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-bold text-sm text-gray-900 leading-tight mb-0.5">Naše adresa</h3>
            <p class="text-gray-600 text-xs font-medium">{contactInfo.address.street}, {contactInfo.address.city}</p>
          </div>
        </div>
      </a>
    </div>
  </div>
</section>

---
import { Icon } from 'astro-icon/components';
import { siteConfig } from '../../data/siteConfig';

interface Feature {
  icon: string;
  bgColor: string;
  title: string;
  description: string;
}

const features: Feature[] = [
  {
    icon: 'mdi:doctor',
    bgColor: 'bg-primary',
    title: 'Odborný tým',
    description: 'Certifikovaní pediatři s mnohaletou praxí'
  },
  {
    icon: 'mdi:heart-pulse',
    bgColor: 'bg-cyan-600',
    title: 'Moderní vybavení',
    description: 'Nejnovější diagnostická technika'
  },
  {
    icon: 'mdi:emoticon-happy',
    bgColor: 'bg-purple-600',
    title: 'Dětsky přátelské',
    description: 'Prostředí navržené pro děti'
  }
];

const INFO_ICON = 'mdi:information';
const ARROW_ICON = 'mdi:arrow-right';
---

<section id="o-nas" class="py-12 md:py-20 bg-white relative overflow-hidden">
  <div class="absolute inset-0 z-6">
    <div class="absolute inset-0 bg-linear-to-br from-blue-50/40 via-white/60 to-purple-50/40 backdrop-blur-sm"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto">
      <!-- Unified title style matching HorizontalCarousel -->
      <div class="text-center mb-6 md:mb-8">
        <h2 class="text-3xl md:text-4xl font-extrabold tracking-tight text-blue-900">
          <span class="relative inline-block">
            <span class="absolute inset-x-2 bottom-1 h-3 bg-blue-100/70 rounded-full md:h-4 md:bottom-0"></span>
            <span class="relative px-2 md:px-3">
              O naší ordinaci
            </span>
          </span>
        </h2>
      </div>

      <p class="text-base md:text-lg text-gray-600 mb-6 md:mb-8 text-center">
        {siteConfig.teamDescription.doctors} {siteConfig.teamDescription.nurses}
      </p>
      <div class="grid md:grid-cols-3 gap-6 md:gap-8 mt-8 md:mt-12">
        {features.map(feature => (
          <div class="text-center">
            <div class:list={[
              'w-12 h-12 md:w-16 md:h-16 rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4',
              feature.bgColor
            ]}>
              <Icon name={feature.icon} class="w-6 h-6 md:w-8 md:h-8 text-white" />
            </div>
            <h3 class="font-semibold text-lg md:text-xl mb-2">{feature.title}</h3>
            <p class="text-sm md:text-base text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>

      <!-- CTA to full About page -->
      <div class="mt-8 md:mt-12 text-center">
        <a
          href="/o-nas"
          class:list={[
            'btn-primary',
            'inline-flex items-center justify-center px-6 py-3 md:px-8 md:py-4 rounded-xl font-semibold',
            'text-sm md:text-base transition duration-200'
          ]}
        >
          Více o nás
        </a>
        <p class="text-xs md:text-sm text-gray-500 mt-3 md:mt-4">
          Poznejte náš tým, historii ordinace a naše hodnoty
        </p>
      </div>
    </div>
  </div>
</section>
